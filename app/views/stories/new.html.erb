<% if @story.errors.any? %>
    <div class="form_errors">
      <h3>
        <ul>
          <% @story.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
          <% end %>
        </ul>
      </h3>
    </div>
<% end %>
<%= form_for @story do |f| %>
    <div>
      <p><%= f.label :name %></p>
      <%= f.text_field :name %>
    </div>
    <div>
      <p><%= f.label :link %></p>
      <%= f.text_field :link %>
    </div>
    <div>
      <p><%= f.label :description %></p>
      <%= f.text_area :description %>
    </div>
    <%= submit_tag %>
<% end %>
